{
  "name": "zuju-api",
  "version": "1.0.0",
  "description": "Zuju API",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/index.js",
    "build": "swc src -d dist",
    "start": "NODE_ENV=production node dist/index.js"
  },
  "author": "Feek",
  "license": "ISC",
  "dependencies": {
    "@koa/router": "12.0.1",
    "@prisma/client": "5.6.0",
    "koa": "2.14.2"
  },
  "devDependencies": {
    "@swc/cli": "0.1.63",
    "@swc/core": "1.3.100",
    "@types/node": "20.10.1",
    "chokidar": "3.5.3",
    "concurrently": "8.2.2",
    "nodemon": "3.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.3.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
